{
  "name": "kommerce",
  "version": "0.1.0",
  "private": false,
  "description": "Responsive E-commerce store front",
  "author": "Simplymichael <simplymichaelorji@gmail.com> (https://github.com/simplymichael)",
  "license": "MIT",
  "keywords": [
    "ecommerce",
    "store",
    "shopping",
    "commerce"
  ],
  "dependencies": {
    "@testing-library/jest-dom": "4.2.4",
    "@testing-library/react": "9.5.0",
    "@testing-library/user-event": "7.2.1",
    "bootstrap": "4.5.0",
    "immutable": "4.0.0-rc.12",
    "prop-types": "15.7.2",
    "react": "^16.13.1",
    "react-bootstrap": "1.0.1",
    "react-dom": "^16.13.1",
    "react-redux": "7.2.0",
    "react-router-dom": "5.2.0",
    "react-scripts": "3.4.1",
    "redux": "4.0.5",
    "redux-devtools-extension": "2.13.8",
    "redux-immutable": "4.0.0",
    "redux-saga": "1.1.3",
    "reselect": "4.0.0",
    "styled-components": "5.1.0",
    "whatwg-fetch": "3.0.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --testPathIgnorePatterns='test-utils.js'",
    "test:coverage": "npm test -- --watchAll=false --coverage",
    "test:verbose": "npm run test:coverage -- --verbose --coverageReporters='text'",
    "commit": "git-cz",
    "lint": "./node_modules/.bin/eslint ./src",
    "lint:fix": "npm run lint -- --fix",
    "db-server": "json-server ./src/__DATA__/api.json >> ./json-server.log"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "commitizen": "4.1.2",
    "cz-conventional-changelog": "3.2.0",
    "ghooks": "2.0.4",
    "json-server": "0.16.1"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    },
    "ghooks": {
      "pre-commit": "npm run lint && npm run test:coverage"
    }
  },
  "jest": {
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "src/__tests__",
      "/src/resources",
      "src/(index|config|serviceWorker|setupTests).js"
    ],
    "coverageReporters": [
      "json",
      "lcov",
      "text-summary",
      "clover"
    ],
    "coverageThreshold": {
      "global": {
        "lines": 80,
        "statements": 80,
        "function": 80,
        "branches": 80
      }
    }
  }
}
